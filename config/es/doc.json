{
  "_source": ["title", "path"],
  "query": {
    "query_string": {
      "query": "SEARCH_QUERY",
      "fields": ["title^3", "body.english"],
      "analyzer": "english_noted",
      "fuzziness": "AUTO",
      "default_operator": "AND",
      "lenient": true,
      "phrase_slop": 50
    }
  },
  "size": 1,
  "from": "DOC_SEARCH_INDEX",
  "highlight": {
    "type": "plain",
    "number_of_fragments": 0,
    "fields": {
      "body.english": {}
    }
  }
}
